<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_calendar_day"
    android:padding="2dp"> <!-- 稍微减小 padding，给标题留空间 -->

    <!-- 日期数字 -->
    <TextView
        android:id="@+id/text_view_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="29" />

    <!-- 标题预览 1 -->
    <TextView
        android:id="@+id/text_view_preview_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="10sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingHorizontal="2dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/text_view_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        android:textColor="#29B6F6"
        android:gravity="center"
        tools:text="买菜"
        tools:visibility="visible"/>

    <!-- 标题预览 2 -->
    <TextView
        android:id="@+id/text_view_preview_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textSize="10sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingHorizontal="2dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/text_view_preview_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        android:textColor="#29B6F6"
        android:gravity="center"
        tools:text="学习 Kotlin"
        tools:visibility="visible"/>

    <!-- 原来的小红点 (可选，如果标题太长显示不下时，可以回退到只显示红点) -->
    <View
        android:id="@+id/dot_has_notes"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/dot_indicator"
        android:visibility="gone"

        app:layout_constraintTop_toBottomOf="@id/text_view_preview_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>