<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_paper_border">

    <EditText
        android:id="@+id/et_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoLink="web|email"
        android:textColorLink="#2196F3"
        android:background="@null"
        android:gravity="top|start"
        android:hint="在此处开始书写..."
        android:lineSpacingMultiplier="1.2"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:inputType="textMultiLine|textNoSuggestions"
        app:layout_constraintBottom_toTopOf="@+id/ll_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/btn_bold"
            style="@style/EditorIconStyle"
            android:src="@drawable/ic_bold"
            android:contentDescription="加粗" />

        <ImageView
            android:id="@+id/btn_italic"
            style="@style/EditorIconStyle"
            android:src="@drawable/ic_italic"
            android:contentDescription="斜体" />

        <ImageView
            android:id="@+id/btn_add_image"
            style="@style/EditorIconStyle"
            android:src="@drawable/ic_add_image"
            android:contentDescription="插入图片" />

        <ImageView
            android:id="@+id/btn_cancel"
            style="@style/EditorIconStyle"
            android:src="@drawable/ic_left"
            android:contentDescription="撤销" />

        <ImageView
            android:id="@+id/btn_recover"
            style="@style/EditorIconStyle"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_right"
            android:contentDescription="恢复" />
        <ImageView
            android:id="@+id/btn_save"
            style="@style/EditorIconStyle"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_save"
            android:contentDescription="保存" />
        <ImageView
            android:id="@+id/btn_load"
            style="@style/EditorIconStyle"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_load"
            android:contentDescription="加载" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>